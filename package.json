{
  "name": "@adobe/aem-boilerplate",
  "private": true,
  "version": "22.0.0",
  "description": "Volvo Trucks North America",
  "engines": {
    "node": ">=v20.15.1 <23",
    "npm": ">=10.7.0"
  },
  "scripts": {
    "dev": "npx @adobe/helix-cli up",
    "test": "wtr \"./test/**/*.test.js\" --node-resolve --port=2000 --coverage",
    "test:watch": "npm test -- --watch",
    "lint:js": "eslint .",
    "lint:css": "stylelint 'blocks/**/*.css' 'styles/*.css' 'templates/**/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "prepare": "husky install",
    "postupdate": "copyfiles -u 3 'node_modules/video.js/dist/video.min.js' 'node_modules/video.js/dist/video-js.min.css' scripts/videojs"
  },
  "lint-staged": {
    "*.js": "npm run lint:js",
    "*.css": "npm run lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/helix-project-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-project-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/helix-project-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "7.24.5",
    "@babel/eslint-parser": "7.24.5",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@web/test-runner": "0.18.2",
    "@web/test-runner-commands": "0.9.0",
    "chai": "5.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "sinon": "17.0.1",
    "stylelint": "16.8.1",
    "stylelint-config-standard": "36.0.1",
    "video.js": "8.17.3"
  }
}
