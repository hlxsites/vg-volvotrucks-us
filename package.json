{
  "name": "@adobe/helix-project-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "dev": "npx @adobe/helix-cli up",
    "test": "wtr \"./test/**/*.test.js\" --node-resolve --port=2000 --coverage",
    "test:watch": "npm test -- --watch",
    "lint:js": "eslint .",
    "stylelint-staged": "stylelint 'blocks/**/*.css' 'styles/*.css' 'templates/**/*.css'",
    "lint": "npm run lint:js && npm run stylelint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "npm run lint:js",
    "*.css": "npm run stylelint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/helix-project-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-project-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/helix-project-boilerplate#readme",
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@babel/eslint-parser": "7.22.10",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@web/test-runner": "0.15.0",
    "@web/test-runner-commands": "0.6.5",
    "chai": "4.3.7",
    "eslint": "8.47.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.28.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "sinon": "15.0.1",
    "stylelint": "15.10.2",
    "stylelint-config-standard": "34.0.0"
  }
}
